{
  "name": "olympus-backgammon-backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "nodemon --watch src/ --exec 'npm run lint && npm run start-server'",
    "start-server": "node -r dotenv/config src/index.js",
    "lint": "eslint src/; exit 0"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "prompt-sync": "^4.2.0",
    "ramda.clone": "^0.26.1",
    "socket.io": "^2.3.0"
  },
  "devDependencies": {
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.3",
    "nodemon": "^2.0.4",
    "prettier": "2.0.5"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:node/recommended",
      "plugin:prettier/recommended"
    ]
  },
  "nodemonConfig": {
    "events": {
      "start": "node -e 'console.clear()'"
    }
  },
  "prettier": {
    "tabWidth": 4,
    "printWidth": 100,
    "jsxBracketSameLine": true
  }
}
