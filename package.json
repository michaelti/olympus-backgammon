{
    "name": "olympus-backgammon",
    "version": "1.0.0",
    "description": "",
    "main": "",
    "scripts": {
        "start": "npm run dev",
        "dev": "concurrently --names olympus-bg,frontend,backend 'npm run dev:olympus-bg' 'npm run dev:frontend' 'npm run dev:backend'",
        "postinstall": "npm run install:olympus-bg && npm run install:frontend && npm run install:backend",
        "install:olympus-bg": "npm install --prefix olympus-bg",
        "install:frontend": "npm install --prefix frontend",
        "install:backend": "npm install --prefix backend",
        "dev:olympus-bg": "npm run dev --prefix olympus-bg",
        "dev:frontend": "npm run dev --prefix frontend",
        "dev:backend": "npm run dev --prefix backend"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/michaelti/olympus-backgammon.git"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/michaelti/olympus-backgammon/issues"
    },
    "homepage": "https://github.com/michaelti/olympus-backgammon#readme",
    "devDependencies": {
        "concurrently": "^6.2.0"
    },
    "prettier": {
        "tabWidth": 4,
        "printWidth": 100,
        "jsxBracketSameLine": true
    }
}
