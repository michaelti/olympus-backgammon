{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "es2016",
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "declaration": true,
        "sourceMap": true
    },
    "include": ["./src"],
    "exclude": ["**/*.test.ts"]
}
